<?xml version="1.0" encoding="UTF-8"?>

<!-- default-activation="lazy" -->
<blueprint xmlns:jpa="http://aries.apache.org/xmlns/jpa/v2.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.2.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <jpa:enable/>
    <tx:enable-annotations/>

    <!--理论课程信息dao-->
    <bean id="lessonInfoBeanDaoImpl"
          class="com.kalix.educational.teachingplan.dao.LessonInfoBeanDaoImpl"> <!--init-method="init">-->
        <tx:transaction method="*" value="Required"/>
    </bean>
    <service id="lessonInfoBeanDao" ref="lessonInfoBeanDaoImpl" interface="com.kalix.educational.teachingplan.api.dao.ILessonInfoBeanDao"/>

    <!--实践环节信息dao-->
    <bean id="practiceInfoBeanDaoImpl"
          class="com.kalix.educational.teachingplan.dao.PracticeInfoBeanDaoImpl"> <!--init-method="init">-->
        <tx:transaction method="*" value="Required"/>
    </bean>
    <service id="practiceInfoBeanDao" ref="practiceInfoBeanDaoImpl" interface="com.kalix.educational.teachingplan.api.dao.IPracticeInfoBeanDao"/>

    <!--年级dao-->
    <bean id="gradeBeanDaoImpl" class="com.kalix.educational.teachingplan.dao.GradeBeanDaoImpl">
        <tx:transaction method="*" value="Required"/>
    </bean>
    <service id="gradeBeanDao" ref="gradeBeanDaoImpl" interface="com.kalix.educational.teachingplan.api.dao.IGradeBeanDao"/>

    <!--年级与专业关联dao-->
    <bean id="gradeMajorBeanDaoImpl" class="com.kalix.educational.teachingplan.dao.GradeMajorBeanDaoImpl">
        <tx:transaction method="*" value="Required"/>
    </bean>
    <service id="gradeMajorBeanDao" ref="gradeMajorBeanDaoImpl" interface="com.kalix.educational.teachingplan.api.dao.IGradeMajorBeanDao"/>
</blueprint>
